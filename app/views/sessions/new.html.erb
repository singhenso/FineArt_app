<h1>Sign Up and Create your own Gallery!</h1>

<%= form_for :login, url: login_path do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email , :class  =>'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, :class  =>'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Log in' %>
    </div>
  <% end %>

  <%= link_to "sign up", new_user_path %><br>
  <a href='items'>List of Paintings</a>
